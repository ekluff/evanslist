{{#if addCategoryForm}}
<h1>New Category</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Name</label>
        {{input value=title id="title"}}
      </div>

      <button {{action 'saveCategory'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'showCategoryForm'}}>New Category</button>
{{/if}}
