{{#if editForm}}
<h1>Edit post</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author Name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body"}}
      </div>

      <button {{action 'editPost' post}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editForm'}}>Edit post</button>
{{/if}}
